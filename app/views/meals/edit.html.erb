<%= form_for(@meal) do |f| %>
<%= f.label :meal_type %>
<%= f.select (:meal_type) do  %>
<% [['Meal', 'meal'], ['Snack', 'snack'], ['Drink', 'drink']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
<% end %>
<% end %><br />

<%= f.label :calories %>
<%= f.number_field :calories %><br />

<%= f.label :meal_time %>
<%= f.select (:meal_time) do  %>
<% [['Breakfast', 'breakfast'], ['Lunch', 'breakfast'], ['Dinner', 'dinner'], ['Other', 'other']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
<% end %>
<% end %><br />

<%= f.label :day_of_meal %>
<%= f.date_field :day_of_meal, :value => Time.now.strftime('%Y-%m-%d') %><br /> 
<!--set default as today, might be able to do this by making the day_of_meal today by default in database-->
<%= hidden_field_tag "redirect", @redirect %>
<%= f.submit "Update Meal" %>

<% end %>


