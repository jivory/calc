<%= form_for(@meal) do |f| %>
<%= f.label :meal_time %>
	<% @meal_time.each do |name, result| %>
		<%= f.check_box(:meal_time, {:multiple => false}, result, nil) %>  <%= name %>
	<% end %><br>

<%= f.label :meal_type %>
<%= f.label :meal_type %>
	<% @meal_type.each do |name, result| %>
		<%= f.check_box(:meal_type, {:multiple => false}, result, nil) %>  <%= name %>
	<% end %><br>

<%= f.label :calories %>
<%= f.number_field :calories %><br />

<%= f.label :day_of_meal %>
<%= f.date_field :day_of_meal %><br /> 
<!--set default as today, might be able to do this by making the day_of_meal today by default in database-->
<%= hidden_field_tag "redirect", @redirect %>
<%= f.submit "Update Meal" %>

<% end %>


