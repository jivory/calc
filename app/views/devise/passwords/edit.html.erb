<body>
  <div class="wrapper full-page-wrapper page-auth page-login text-center">
    <div class="inner-page">
      <div class="logo">
        <%= link_to image_tag("meal_types.png", size: "200x50"), root_path %>
      </div>
       <div class="header-error">
        <%= devise_error_messages! %>
      </div>
        <div class="login-box center-block">
          <div class="form-horizontal">
            <p class="title">Change your password</p>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                  <div class="col-sm-12">
                    <div class="input-group">
                      <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder:"password â‰¥ 8 characters" %>
                      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <div class="input-group">
                      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off", placeholder:"confirm your password" %>
                      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                  </div>
                </div>
                <%= f.submit "Change my password", class: "fa fa-arrow-circle-o-right", class: "btn btn-custom-primary btn-lg btn-block btn-auth"  %>
                <i class: "fa fa-arrow-circle-o-right"> </i>
            <% end %>
          <div class="links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
