<h2> Calculate Your Calorie Goal </h2> 

<%= form_for @goal do |f| %>
	
	<%= f.label :goal_name, "Goal Name" %>
	<%= f.text_field :goal_name %><br />

	<%= f.label :age %>
	<%= f.number_field :age %><br />

	<%= f.label :sex %>
	<% @sex.each do |name, result| %>
	<%= f.check_box(:sex, {:multiple => false}, result, nil) %>  <%= name %>
	<% end %><br>

	<%= f.label :weight, "Current Weight" %>
	<%= f.number_field :weight %> lbs<br />


	<%= f.label :desired_weight, "Desired Weight" %>
	<%= f.number_field :desired_weight %><br />

	<%= f.label :height %>
	<%= f.number_field :height %> inches<br />

	<%= f.label :activity, "Activity level" %> <%= link_to "More Info", more_info_path %><br>
	<% @activity.each do |name, result| %>
	<%= f.check_box(:activity, {:multiple => false}, result, nil) %>  <%= name %>
	<% end %><br><br>
<%= f.submit "Calculate" %>

<% end %>

