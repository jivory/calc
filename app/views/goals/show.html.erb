<% @goal_attributes.each do |name, value| %>
<% if !value.nil? %>
<%= "#{name}: " %><%= value %><br>
<% end %>
<% end %>

<%= "Current Calorie Goal: #{@goal.daily_calories}" %>
<% if !@goal.custom_calories.nil? && @goal.custom_calories != @goal.daily_calories %>
(<%= link_to "Use Custom Goal", goals_set_custom_as_goal_path(@goal) %>) <br>
<% elsif !@goal.custom_calories.nil? && @goal.bmr_calories != @goal.daily_calories %>
(<%= link_to "Use Calculated Goal", goals_set_bmr_as_goal_path(@goal) %>) <br>
<% end %> <br>

<%= link_to "Edit", edit_goal_path %> 
<%= link_to "History", goals_path %> <br>

<% if @goal.custom_calories.nil? %> 
<%= "Want to enter a custom calorie goal? " %>
<%= link_to "Click here", edit_goal_path(@goal) %>
<% end %>




